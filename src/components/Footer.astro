<style>
  footer {
    padding: 2em 1em 6em 1em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
  }
  @media print {
    footer {
      display: none;
    }
  }
  .social-links {
    display: flex;
    justify-content: center;
    align-items: end;
    gap: 1em;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    font-size: 32px;
    line-height: 28px;
  }
  .social-links a:hover {
    transform: scale(1.1);
  }
</style>
<script is:inline>
  if (!!new URLSearchParams(window.location.search).get("embed")) {
    document.querySelector("#bottomfooter").remove();
  }
</script>
