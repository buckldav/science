---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
// import EnvelopeLab from "@/components/labs/hu";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import { Button } from "@/components/ui/button";
import { TypographyH1, TypographyH2 } from "@/components/ui/typography";
const disclosures = [
  { text: "Astronomy", href: "/disclosures/astronomy" },
  { text: "Earth Systems", href: "/disclosures/earth-systems" },
  { text: "Physics", href: "/disclosures/physics" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class:list={["container-lg", "py-4"]}>
      <TypographyH2>Disclosures</TypographyH2>
      <div class="prose dark:prose-invert">
        <ul>
          {
            disclosures.map((d) => (
              <li>
                <a
                  class="hover:underline no-underline font-semibold text-orange-500"
                  href={d.href}
                >
                  {d.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </main>
  </body>
</html>
